config TOUCHSCREEN_HIMAX_IC_HX852xJ
	tristate "HIMAX chipset HX852xJ function"
	depends on TOUCHSCREEN_HIMAX_ONCELL
	help
	  This enables support for HIMAX CHIPSET of HX852xJ.

# ***************** On-cell End *******************
